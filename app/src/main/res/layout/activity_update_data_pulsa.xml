<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDataPulsa">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/judul3"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:gravity="center|clip_horizontal"
            android:text="UPDATE DATA PULSA"
            android:textColor="	#0000FF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <!-- Username Label -->
        <EditText android:id="@+id/text_username2"
            android:layout_marginTop="10dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:hint="Nama"
            android:gravity="center"
            android:background="@drawable/edit_text"
            />

        <!--  Label -->
        <EditText android:id="@+id/text_jumlah2"
            android:layout_marginTop="10dp"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:hint="Jumlah"
            android:gravity="center"
            android:inputType="number"
            android:background="@drawable/edit_text"/>

        <EditText android:id="@+id/text_deskripsi2"
            android:layout_marginTop="10dp"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:hint="Deskripsi Status"
            android:gravity="center"
            android:background="@drawable/edit_text"/>

        <Button
            android:id="@+id/button_save1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="200dp"
            android:text="SAVE"
            android:background="@drawable/buttonshape"
            android:textColor="#363CFF"
            android:textSize="30sp"
            android:shadowColor="#284AA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>

    </LinearLayout>

</FrameLayout>